[sub_resource type="Shader" id="Shader_paddle_glow"]
code = "shader_type canvas_item;
uniform vec4 glow_color : source_color = vec4(0.2, 1.0, 0.4, 1.0);
uniform float glow_intensity : hint_range(0.0, 5.0) = 3.0;
uniform float pulse_speed : hint_range(0.0, 10.0) = 2.0;
uniform float edge_glow : hint_range(0.0, 1.0) = 0.3;

void fragment() {
    vec4 tex = texture(TEXTURE, UV);
    
    // 創建邊緣發光效果
    float edge = 1.0 - smoothstep(0.0, edge_glow, min(UV.x, min(UV.y, min(1.0-UV.x, 1.0-UV.y))));
    
    // 脈動效果
    float pulse = 0.7 + 0.3 * sin(TIME * pulse_speed);
    
    vec4 final_color = tex;
    final_color.rgb = mix(final_color.rgb, glow_color.rgb * glow_intensity, edge * pulse);
    final_color.a = tex.a;
    
    COLOR = final_color;
}"


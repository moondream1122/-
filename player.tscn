[sub_resource type="Shader" id="Shader_neon_player"]
code = "shader_type canvas_item;
uniform vec4 glow_color : source_color = vec4(0.2, 1.0, 0.4, 1.0);
uniform float glow_intensity : hint_range(0.0, 5.0) = 2.5;
uniform float pulse_speed : hint_range(0.0, 10.0) = 3.0;

void fragment() {
    vec4 tex = texture(TEXTURE, UV);
    float pulse = 0.8 + 0.2 * sin(TIME * pulse_speed);
    
    vec4 final_color = tex;
    final_color.rgb = glow_color.rgb * glow_intensity * pulse;
    final_color.a = tex.a;
    
    COLOR = final_color;
}"

